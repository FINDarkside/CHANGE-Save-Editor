<UserControl x:Class="CHANGE_Save_Editor.Views.Tabs.AboutTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CHANGE_Save_Editor.Views.Tabs"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="0 20" >
        <Button MaxWidth="230" Style="{StaticResource MaterialDesignFlatButtonNoRounding}" Foreground="#333"  Height="40" Click="ViewOnGitHubClicked">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Height="24" Width="24" Kind="GithubCircle" VerticalAlignment="Center" />
                <TextBlock Margin="8 0 0 0" FontSize="20" VerticalAlignment="Center">View on GitHub</TextBlock>
            </StackPanel>
        </Button>
        <Label HorizontalAlignment="Center" Margin="0 20 0 0">Developed by FINDarkside</Label>
        <Label HorizontalAlignment="Center">Contact: findarkside@gmail.com</Label>
    </StackPanel>
</UserControl>
